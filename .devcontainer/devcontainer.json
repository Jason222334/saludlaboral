{
  "name": "Salud Laboral Stack",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // ESTA ES LA PARTE QUE TE FALTABA PARA TENER DOCKER
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "Prisma.prisma",
        "esbenp.prettier-vscode",
        "humao.rest-client"
      ]
    }
  },

  "forwardPorts": [3000, 5432, 5678, 5555],
  
  // Esto instala las dependencias autom√°ticamente al reconstruir
  "postCreateCommand": "npm install && npx prisma generate"
}
